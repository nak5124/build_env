Subject: [PATCH 4/5] Makefile: Install windows DLL with mode 755.

---
 Makefile | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/Makefile b/Makefile
index ca3dc08..d22a0c5 100644
--- a/Makefile
+++ b/Makefile
@@ -158,7 +158,7 @@ dcadec.pc: dcadec.pc.in
 install-lib: $(OUT_LIB) dcadec.pc
 	install -d -m 755 $(DESTDIR)$(LIBDIR) $(DESTDIR)$(LIBDIR)/pkgconfig $(DESTDIR)$(INCLUDEDIR)/libdcadec
 ifneq ($(and $(CONFIG_WINDOWS),$(CONFIG_SHARED)),)
-	install -m 644 $(OUT_LIB) $(DESTDIR)$(BINDIR)
+	install -m 755 $(OUT_LIB) $(DESTDIR)$(BINDIR)
 	install -m 644 $(IMP_LIB) $(DESTDIR)$(LIBDIR)
 	install -m 644 $(IMP_DEF) $(DESTDIR)$(LIBDIR)
 else

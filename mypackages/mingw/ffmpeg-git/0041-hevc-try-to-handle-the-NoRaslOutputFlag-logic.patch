---
 libavcodec/hevc.c      | 8 ++++++++
 libavcodec/hevc.h      | 1 +
 libavcodec/hevc_refs.c | 2 +-
 3 files changed, 10 insertions(+), 1 deletion(-)

diff --git a/libavcodec/hevc.c b/libavcodec/hevc.c
index 08ad017..4b6e7b3 100644
--- a/libavcodec/hevc.c
+++ b/libavcodec/hevc.c
@@ -2600,6 +2600,9 @@ static int hevc_frame_start(HEVCContext *s)
     if (ret < 0)
         goto fail;
 
+    if (IS_IRAP(s))
+      s->NoRaslOutputFlag = 0;
+
     ff_thread_finish_setup(s->avctx);
 
     return 0;
@@ -2879,6 +2882,8 @@ static int decode_nal_units(HEVCContext *s, const uint8_t *buf, int length)
 
     s->ref = NULL;
     s->last_eos = s->eos;
+    if (s->last_eos)
+      s->NoRaslOutputFlag = 1;
     s->eos = 0;
 
     /* split the input packet into NAL units, so we know the upper bound on the
@@ -3342,6 +3347,7 @@ static int hevc_update_thread_context(AVCodecContext *dst,
     s->pocTid0    = s0->pocTid0;
     s->max_ra     = s0->max_ra;
     s->eos        = s0->eos;
+    s->NoRaslOutputFlag = s0->NoRaslOutputFlag;
 
     s->is_nalff        = s0->is_nalff;
     s->nal_length_size = s0->nal_length_size;
@@ -3436,6 +3442,7 @@ static av_cold int hevc_decode_init(AVCodecContext *avctx)
 
     s->enable_parallel_tiles = 0;
     s->picture_struct = 0;
+    s->NoRaslOutputFlag = 1;
 
     if(avctx->active_thread_type & FF_THREAD_SLICE)
         s->threads_number = avctx->thread_count;
@@ -3498,6 +3505,7 @@ static void hevc_decode_flush(AVCodecContext *avctx)
     HEVCContext *s = avctx->priv_data;
     ff_hevc_flush_dpb(s);
     s->max_ra = INT_MAX;
+    s->NoRaslOutputFlag = 1;
 }
 
 #define OFFSET(x) offsetof(HEVCContext, x)
diff --git a/libavcodec/hevc.h b/libavcodec/hevc.h
index e0af6f1..cb6b75a 100644
--- a/libavcodec/hevc.h
+++ b/libavcodec/hevc.h
@@ -844,6 +844,7 @@ typedef struct HEVCContext {
     int bs_height;
 
     int is_decoded;

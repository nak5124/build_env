#!/bin/bash
for opt in "$@"
do
    case "$opt" in
        -k)
            http_proxy=proxy.kuins.net:8080
            https_proxy=$http_proxy
            ftp_proxy=$http_proxy
            export http_proxy https_proxy ftp_proxy
            ;;
        -u)
            unset http_proxy https_proxy ftp_proxy
            ;;
        *)
            echo "Unknown Option ${opt}"
    esac
done

